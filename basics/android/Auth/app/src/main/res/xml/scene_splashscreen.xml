<MotionScene
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
            android:id="@+id/splashTransition"
            motion:constraintSetStart="@+id/start"
            motion:constraintSetEnd="@+id/end"
            motion:duration="1300"
            motion:motionInterpolator="linear">

        <ConstraintSet android:id="@+id/start">
            <Constraint
                    android:id="@+id/root">
                <CustomAttribute
                        motion:attributeName="backgroundColor"
                        motion:customColorValue="@color/gray_900" />
            </Constraint>
            <Constraint
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:id="@+id/logo"
                    motion:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    motion:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    motion:layout_constraintTop_toTopOf="parent"
                    motion:layout_constraintBottom_toBottomOf="parent"
                    motion:layout_constraintVertical_bias="0.378">
                <!--<CustomAttribute-->
                        <!--motion:attributeName="BackgroundColor"-->
                        <!--motion:customColorValue="#D81B60"/>-->
            </Constraint>
            <Constraint
                    android:text="Eversafe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fullscreen_content"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/crete_round"
                    android:textSize="36sp"
                    android:layout_marginEnd="8dp"
                    motion:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="8dp"
                    motion:layout_constraintStart_toStartOf="parent"
                    motion:layout_constraintHorizontal_bias="0.498"
                    motion:layout_constraintTop_toBottomOf="@+id/logo"
                    motion:layout_constraintBottom_toBottomOf="parent"
                    motion:layout_constraintTop_toTopOf="parent"
                    motion:layout_constraintVertical_bias="0.536">
                <CustomAttribute
                        motion:attributeName="Text"
                        motion:customStringValue="Eversafe"/>
            </Constraint>
            <Constraint
                android:text="Sign in to continue"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/subtitle"
                android:visibility="gone"
                motion:layout_constraintTop_toBottomOf="@+id/fullscreen_content"
                motion:layout_constraintStart_toStartOf="@+id/fullscreen_content">
            </Constraint>

        </ConstraintSet>

        <ConstraintSet android:id="@+id/end">
            <Constraint
                    android:id="@+id/root">
                <CustomAttribute
                        motion:attributeName="backgroundColor"
                        motion:customColorValue="#FFFFFF" />
            </Constraint>
            <Constraint
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:id="@+id/logo"
                    motion:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    motion:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    motion:layout_constraintTop_toTopOf="parent"
                    motion:layout_constraintBottom_toBottomOf="parent"
                    motion:layout_constraintVertical_bias="0.08"
                    motion:layout_constraintHorizontal_bias="0.498">
                <!--<CustomAttribute-->
                        <!--motion:attributeName="BackgroundColor"-->
                        <!--motion:customColorValue="#9999FF"/>-->
            </Constraint>
            <Constraint
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fullscreen_content"
                    motion:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    motion:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/crete_round"
                    android:textSize="30sp"
                    motion:layout_constraintBottom_toBottomOf="parent"
                    motion:layout_constraintTop_toTopOf="parent"
                    motion:layout_constraintVertical_bias="0.294"
                    motion:layout_constraintHorizontal_bias="0.073">
                <CustomAttribute
                    motion:attributeName="Text"
                    motion:customStringValue="We are safe together!"/>
            </Constraint>
            <Constraint
                    android:text="Sign in to continue"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/subtitle"
                    android:visibility="visible"
                    motion:layout_constraintTop_toBottomOf="@+id/fullscreen_content"
                    motion:layout_constraintStart_toStartOf="@+id/fullscreen_content">
            </Constraint>
        </ConstraintSet>

        <KeyFrameSet>
            <KeyCycle
                    android:translationY="50dp"
                    motion:framePosition="100"
                    motion:motionTarget="@id/logo"
                    motion:waveOffset="0"
                    motion:wavePeriod="0"
                    motion:waveShape="sin"/>
            <KeyCycle
                    android:translationY="50dp"
                    motion:framePosition="80"
                    motion:motionTarget="@id/logo"
                    motion:waveOffset="0"
                    motion:wavePeriod="1"
                    motion:waveShape="sin"/>
            <KeyCycle
                    android:translationY="50dp"
                    motion:framePosition="0"
                    motion:motionTarget="@id/logo"
                    motion:waveOffset="0"
                    motion:wavePeriod="0"
                    motion:waveShape="sin"/>


        </KeyFrameSet>
    </Transition>

</MotionScene>
